generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  storyboards Storyboard[]
}

model Storyboard {
  id          Int          @id @default(autoincrement())
  title       String
  prompt      String?
  imageReff   String?
  userId      Int
  user        User         @relation(fields: [userId], references: [id])
  storypoints Storypoint[]
}

model Storypoint {
  id           Int         @id @default(autoincrement())
  title        String
  description  String
  storyboardId Int       
  image        String?
  frame        Int
  hasImage     Int         @default(0)
  storyboard   Storyboard  @relation(fields: [storyboardId], references: [id])
}

